let ZIP_LED = neopixel.create(DigitalPin.P0, 24, NeoPixelMode.RGB)
basic.forever(function () {
    if (input.buttonIsPressed(Button.A)) {
        ZIP_LED.clear()
        ZIP_LED.setPixelColor(1, neopixel.colors(NeoPixelColors.Violet))
        ZIP_LED.setPixelColor(2, neopixel.colors(NeoPixelColors.Violet))
        ZIP_LED.setPixelColor(3, neopixel.colors(NeoPixelColors.Violet))
        ZIP_LED.setPixelColor(4, neopixel.colors(NeoPixelColors.Violet))
        ZIP_LED.setPixelColor(5, neopixel.colors(NeoPixelColors.Violet))
        ZIP_LED.setPixelColor(6, neopixel.colors(NeoPixelColors.Violet))
        ZIP_LED.setPixelColor(18, neopixel.colors(NeoPixelColors.Violet))
        ZIP_LED.setPixelColor(19, neopixel.colors(NeoPixelColors.Violet))
        ZIP_LED.setPixelColor(20, neopixel.colors(NeoPixelColors.Violet))
        ZIP_LED.setPixelColor(21, neopixel.colors(NeoPixelColors.Violet))
        ZIP_LED.setPixelColor(22, neopixel.colors(NeoPixelColors.Violet))
        ZIP_LED.setPixelColor(23, neopixel.colors(NeoPixelColors.Violet))
        ZIP_LED.setPixelColor(24, neopixel.colors(NeoPixelColors.Violet))
        ZIP_LED.show()
    } else if (input.buttonIsPressed(Button.B)) {
        ZIP_LED.clear()
        ZIP_LED.setPixelColor(7, neopixel.colors(NeoPixelColors.Violet))
        ZIP_LED.setPixelColor(8, neopixel.colors(NeoPixelColors.Violet))
        ZIP_LED.setPixelColor(9, neopixel.colors(NeoPixelColors.Violet))
        ZIP_LED.setPixelColor(10, neopixel.colors(NeoPixelColors.Violet))
        ZIP_LED.setPixelColor(11, neopixel.colors(NeoPixelColors.Violet))
        ZIP_LED.setPixelColor(12, neopixel.colors(NeoPixelColors.Violet))
        ZIP_LED.setPixelColor(13, neopixel.colors(NeoPixelColors.Violet))
        ZIP_LED.setPixelColor(14, neopixel.colors(NeoPixelColors.Violet))
        ZIP_LED.setPixelColor(15, neopixel.colors(NeoPixelColors.Violet))
        ZIP_LED.setPixelColor(16, neopixel.colors(NeoPixelColors.Violet))
        ZIP_LED.setPixelColor(17, neopixel.colors(NeoPixelColors.Violet))
        ZIP_LED.setPixelColor(18, neopixel.colors(NeoPixelColors.Violet))
        ZIP_LED.setPixelColor(6, neopixel.colors(NeoPixelColors.Violet))
        ZIP_LED.show()
    } else {
        ZIP_LED.showRainbow(1, 360)
    }
})
